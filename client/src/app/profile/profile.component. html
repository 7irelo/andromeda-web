  <div *ngFor="let post of posts" class="card">
    <div class="card-header">
      <strong>Post by {{ post.creator.username }}</strong>
    </div>
    <div class="card-body">
      {{ post.text }}
    </div>
  </div>
</div>
<ng-template #noPosts>
  <p>No posts available.</p>
</ng-template>
<p *ngIf="errorMessage">{{ errorMessage }}</p>
